<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teams4.blog">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo_96"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo_96"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragments.PostPrivate"></activity>
        <activity android:name=".fragments.PostPublic" />
        <activity android:name=".UserDashboard" />
        <activity android:name=".forget.ResetPassword" />
        <activity android:name=".forget.ForgetCodeActivity" />
        <activity android:name=".forget.ForgetActivity" />
        <activity android:name=".CodeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>